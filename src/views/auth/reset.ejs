<%- include('../partials/auth/authheader') %>
<main class="form-signin w-100 m-auto">
    <form action="/auth/reset" method="POST">
        <img src="/img/SMG_TextLogoBlueTM-v3.png" width="298" height="auto" alt="" class="mb-2">
        <h1 class="h3 mb-3 fw-normal text-center">Send Reset Link</h1>
        <% if (messages == "This email does not match any existing accounts." || messages == "This account is disabled.") { %>
            <div class="alert alert-danger alert-dismissible fade show mt-3 d-flex align-items-center" role="alert"> 
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-exclamation-triangle-fill flex-shrink-0 me-2" viewBox="0 0 16 16">
                    <path d="M8.982 1.566a1.13 1.13 0 0 0-1.96 0L.165 13.233c-.457.778.091 1.767.98 1.767h13.713c.889 0 1.438-.99.98-1.767zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5m.002 6a1 1 0 1 1 0 2 1 1 0 0 1 0-2"/>
                </svg>
                <%= messages %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } else if (messages == "Reset link sent to the specified email address.") { %>
            <div class="alert alert-success alert-dismissible fade show mt-3 d-flex align-items-center" role="alert"> 
                <svg xmlns="http://www.w3.org/2000/svg" width="1em" height="1em" fill="currentColor" class="bi bi-check-circle-fill  flex-shrink-0 me-2" viewBox="0 0 16 16">
                    <path d="M16 8A8 8 0 1 1 0 8a8 8 0 0 1 16 0m-3.97-3.03a.75.75 0 0 0-1.08.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-.01-1.05z"/>
                </svg>
                <%= messages %>
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        <% } %>
        <div class="form-floating mb-2">
            <input type="email" class="form-control rounded" id="email" name="email" placeholder="" required>
            <label for="floatingInput">Email address</label>
        </div>
        <button class="btn btn-primary w-100 py-2" type="submit">Send</button>
        <p class="mt-4 mb-3 text-center">
            <a class="text-body-secondary" href="/auth/login">Remember Password</a>
        </p>
        <p class="mt-2 mb-3 text-body-secondary text-center">Â© 2024 Societas Music Group Corp.</p>
    </form>
</main>
<%- include('../partials/auth/authfooter') %>