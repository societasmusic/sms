                    <button class="btn btn-secondary py-0 px-3 fs-7" onclick="location.href='/scm/vendors/export/csv'">Export CSV</button>
                    <% if (user.access ==  "Editor" || user.access ==  "System Administrator" || user.access ==  "System Owner") { %>
                        <button type="button" class="btn btn-primary fs-7 py-1 px-2 d-flex ms-2 d-flex align-items-center" onclick="location.href='/ais/parties/create'">
