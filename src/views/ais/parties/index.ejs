<%- include('../../partials/header') %>
<div class="flex-grow-1 bg-body">
    <%- include('../../partials/breadcrumb') %>
    <div class="pt-2 pb-3 bg-body">
        <div class="px-3">
            <div class="px-3 container-fluid d-flex justify-content-between">
                <div class="d-flex" role="group" aria-label="Basic example">
                    <button class="btn btn-secondary py-0 px-3 fs-7" onclick="location.href='/scm/vendors/export/csv'">Export CSV</button>
                    <% if (user.access ==  "Editor" || user.access ==  "System Administrator" || user.access ==  "System Owner") { %>
                        <button type="button" class="btn btn-primary fs-7 py-1 px-2 d-flex ms-2 d-flex align-items-center" onclick="location.href='/ais/parties/create'">
                            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg d-flex align-self-center me-1" viewBox="0 0 16 16">
                                <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2"/>
                            </svg>
                            Create Party
                        </button>
                    <% } %>
                </div>
            </div>
        </div>
        <div class="px-3 container-fluid mt-2">
            <div class="px-3">
                <table class="table table-striped" id="table" style="width:100%">
                    <thead>
                        <tr>
                            <th class="col text-light fw-medium bg-dark py-3 text-center fs-7">
                                #
                            </th>
                            <th class="col-2 text-light fw-medium bg-dark py-3 fs-7">
                                Actions
                            </th>
                            <th class="col-4 text-light fw-medium bg-dark py-3 fs-7">
                                Name
                            </th>
                            <th class="col-1 text-light fw-medium bg-dark py-3 fs-7">
                                Party Type
                            </th>
                            <th class="col-1 text-light fw-medium bg-dark py-3 fs-7">
                                Business Type
                            </th>
                            <th class="col-1 text-light fw-medium bg-dark py-3 fs-7">
                                Tax Territory
                            </th>
                            <th class="col-2 text-light fw-medium bg-dark py-3 fs-7">
                                Last Updated
                            </th>
                            <th class="col-1 text-light fw-medium bg-dark py-3 fs-7">
                                Balance
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% 
                            parties.sort(function (a, b) {
                                if (a.name < b.name) {
                                    return -1;
                                }
                                if (a.name > b.name) {
                                    return 1;
                                }
                                return 0;
                            }); 
                        %>
                        <% if (parties) { %>
                            <% var i = 1 %>
                            <% parties.forEach(e => { %>
                                <tr id="<%= e._id %>">
                                    <td class="py-4 text-center fs-7">
                                        <div class="py-1">
                                            <%= i %>
                                        </div>
                                    </td>
                                    <!-- <td class="py-4">
                                        <div class="py-1">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                        </div>
                                    </td> -->
                                    <td class="py-4">
                                        <div class="d-flex gap-1">
                                            <a href="/ais/parties/<%= e._id %>" class="btn btn-primary fs-7 py-1">View</a>
                                            <a href="/ais/parties/<%= e._id %>/edit" class="btn btn-warning fs-7 py-1">Edit</a>
                                            <button class="btn btn-danger fs-7 py-1" data-bs-toggle="modal" data-bs-target="#delete<%= e._id %>">Delete</button>
                                            <% if (user.access == "System Administrator" || user.access == "System Owner") { %>
                                                <div class="modal fade" id="delete<%= e._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm Action</h1>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                Are you sure you wish to delete this record? This action is permanent and has no option to undo.
                                                                <div class="mt-2">
                                                                    <b>Name:&nbsp;</b><%= e.name %>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                                <form action="/ais/parties/<%= e._id %>/delete" method="POST">
                                                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td class="py-3 fs-7">
                                        <div class="py-1 d-flex gap-3 align-items-center">
                                            <div class="circle">
                                                <p class="circle-inner"><%= e.name.slice(0,2) %></p>
                                            </div>
                                            <a href="/ais/parties/<%= e._id %>"><%= e.name %></a>
                                        </div>
                                    </td>
                                    <td class="py-4 fs-7">
                                        <div class="py-1">
                                            <%= e.partyType %>
                                        </div>
                                    </td>
                                    <td class="py-4 fs-7">
                                        <div class="py-1">
                                            <%= e.businessType %>
                                        </div>
                                    </td>
                                    <td class="py-4 fs-7">
                                        <div class="py-1 d-block text-truncate">
                                            <%= e.territory %>
                                        </div>
                                    </td>
                                    <td class="py-4 fs-7">
                                        <div class="py-1">
                                            <% var date = e.updatedAt.toISOString() %>
                                            <%= date %>
                                        </div>
                                    </td>
                                    <td class="py-4 fs-7">
                                        <div class="py-1">
                                            0.00 USD
                                        </div>
                                    </td>
                                </tr>
                                <% i = i + 1; %>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td class="py-3">...</td>
                                <td class="py-3">...</td>
                                <td class="py-3">...</td>
                                <td class="py-3">...</td>
                                <td class="py-3">...</td>
                                <td class="py-3">...</td>
                                <td class="py-3">...</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<script>
    $(document).ready( function () {
        $('#table').DataTable({
            responsive: true,
            order: [[2, 'asc']],
            columnDefs: [
                {
                    orderable: false, targets: [0, 1]
                }
            ]
        });
    });
</script>
<%- include('../../partials/footer') %>