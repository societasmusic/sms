        <div class="px-3 container-fluid mt-2">
            <div class="px-3">
                <table class="fs-7 table table-striped">
                    <thead>
                        <tr>
                            <th class="col text-light fw-medium bg-dark py-3 text-center">
                                #
                            </th>
                            <th class="col-2 text-light fw-medium bg-dark py-3">
                                Actions
                            </th>
                            <th class="col-4 text-light fw-medium bg-dark py-3">
                                Name
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-funnel ms-1" viewBox="0 0 16 16">
                                    <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2z"/>
                                </svg>
                            </th>
                            <th class="col-1 text-light fw-medium bg-dark py-3">
                                Party Type
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-funnel ms-1" viewBox="0 0 16 16">
                                    <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2z"/>
                                </svg>
                            </th>
                            <th class="col-1 text-light fw-medium bg-dark py-3">
                                Business Type
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-funnel ms-1" viewBox="0 0 16 16">
                                    <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2z"/>
                                </svg>
                            </th>
                            <th class="col-1 text-light fw-medium bg-dark py-3">
                                Tax Territory
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-funnel ms-1" viewBox="0 0 16 16">
                                    <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2z"/>
                                </svg>
                            </th>
                            <th class="col-2 text-light fw-medium bg-dark py-3">
                                Last Updated
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-funnel ms-1" viewBox="0 0 16 16">
                                    <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2z"/>
                                </svg>
                            </th>
                            <th class="col-1 text-light fw-medium bg-dark py-3">
                                Balance
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-funnel ms-1" viewBox="0 0 16 16">
                                    <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2z"/>
                                </svg>
                            </th>
                        </tr>
                    </thead>
                    <tbody>
                        <% if (parties) { %>
                            <% var i = 1 %>
                            <% parties.forEach(e => { %>
                                <tr id="<%= e._id %>">
                                    <td class="py-4 text-center">
                                        <div class="py-1">
                                            <%= i %>
                                        </div>
                                    </td>
                                    <!-- <td class="py-4">
                                        <div class="py-1">
                                            <input class="form-check-input" type="checkbox" value="" id="flexCheckDefault">
                                        </div>
                                    </td> -->
                                    <td class="py-4">
                                        <div class="d-flex gap-1">
                                            <a href="/ais/parties/<%= e._id %>" class="btn btn-primary fs-7 py-1">View</a>
                                            <a href="/ais/parties/<%= e._id %>/edit" class="btn btn-warning fs-7 py-1">Edit</a>
                                            <button class="btn btn-danger fs-7 py-1" data-bs-toggle="modal" data-bs-target="#delete<%= e._id %>">Delete</button>
                                            <% if (user.access == "System Administrator" || user.access == "System Owner") { %>
                                                <div class="modal fade" id="delete<%= e._id %>" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
                                                    <div class="modal-dialog modal-dialog-centered">
                                                        <div class="modal-content">
                                                            <div class="modal-header">
                                                                <h1 class="modal-title fs-5" id="exampleModalLabel">Confirm Action</h1>
                                                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                                                            </div>
                                                            <div class="modal-body">
                                                                Are you sure you wish to delete this record? This action is permanent and has no option to undo.
                                                                <div class="mt-2">
                                                                    <b>Name:&nbsp;</b><%= e.name %>
                                                                </div>
                                                            </div>
                                                            <div class="modal-footer">
                                                                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                                                                <form action="/ais/parties/<%= e._id %>/delete" method="POST">
                                                                    <button type="submit" class="btn btn-primary">Save changes</button>
                                                                </form>
                                                            </div>
                                                        </div>
                                                    </div>
                                                </div>
                                            <% } %>
                                        </div>
                                    </td>
                                    <td class="py-3">
                                        <div class="py-1 d-flex gap-3 align-items-center">
                                            <div class="circle">
                                                <p class="circle-inner"><%= e.name.slice(0,2) %></p>
                                            </div>
                                            <a href="/ais/parties/<%= e._id %>"><%= e.name %></a>
                                        </div>
                                    </td>
                                    <td class="py-4">
                                        <div class="py-1">
                                            <%= e.partyType %>
                                        </div>
                                    </td>
                                    <td class="py-4">
                                        <div class="py-1">
                                            <%= e.businessType %>
                                        </div>
                                    </td>
                                    <td class="py-4">
                                        <div class="py-1 d-block text-truncate">
                                            <%= e.territory %>
                                        </div>
                                    </td>
                                    <td class="py-4">
                                        <div class="py-1">
                                            <% var date = e.updatedAt.toISOString() %>
                                            <%= date %>
                                        </div>
                                    </td>
                                    <td class="py-4">
                                        <div class="py-1">
                                            0.00 USD
                                        </div>
                                    </td>
                                </tr>
                                <% i = i + 1; %>
                            <% }) %>
                        <% } else { %>
                            <tr>
                                <td class="py-3">...</td>
                                <td class="py-3">...</td>
                                <td class="py-3">...</td>
                                <td class="py-3">...</td>
                                <td class="py-3">...</td>
                                <td class="py-3">...</td>
                                <td class="py-3">...</td>
                            </tr>
                        <% } %>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>
<%- include('../../partials/footer') %>