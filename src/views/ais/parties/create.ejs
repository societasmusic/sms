<%- include('../../partials/header') %>
<div class="flex-grow-1 bg-body">
    <%- include('../../partials/breadcrumb') %>
    <div class="pt-2 pb-3 bg-body">
        <div class="px-3">
            <div class="px-3">
                <form action="/ais/parties/create" method="POST" class="needs-validation" novalidate>
                    <div class="row mt-2">
                        <h4 class="fw-light">Basic Details</h4>
                        <div class="col-4 py-1">
                            <label for="name" class="form-label fs-7">Name*</label>
                            <input type="text" class="form-control rounded-1" name="name" id="name" required>
                            <div class="invalid-feedback fs-7">
                                    This field cannot be left blank
                            </div>
                        </div>
                        <div class="col-2 py-1">
                            <label for="tin" class="form-label fs-7">Tax ID</label>
                            <input type="text" class="form-control rounded-1" name="tin" id="tin">
                        </div>
                        <div class="col-3 py-1">
                            <label for="category" class="form-label fs-7">Business Category*</label>
                            <select class="form-select form-select-search fs-7" name="category" id="category" aria-label="category" required>
                                <option value=""></option>
                                <option value="Unknown">Unknown</option>
                                <% businesscategories.forEach(e => { %>
                                    <option value="<%= e %>"><%= e %></option>
                                <% }) %>
                            </select>
                            <div class="invalid-feedback fs-7">
                                    This field cannot be left blank
                            </div>
                        </div>
                        <div class="col-3 py-1">
                            <label for="partyType" class="form-label fs-7">Party Type*</label>
                            <select class="form-select fs-7" name="partyType" id="partyType" aria-label="partyType" required>
                                <option value=""></option>
                                <option value="Customer">Customer</option>
                                <option value="Partner">Partner</option>
                                <option value="Vendor">Vendor</option>
                            </select>
                            <div class="invalid-feedback fs-7">
                                    This field cannot be left blank
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2 mb-4">
                        <div class="col-2 py-1">
                            <label for="email" class="form-label fs-7">Email</label>
                            <input type="email" class="form-control rounded-1" name="email" id="email">
                        </div>
                        <div class="col-2 py-1">
                            <label for="phone" class="form-label fs-7">Phone</label>
                            <input type="number" class="form-control rounded-1" name="phone" id="phone">
                        </div>
                        <div class="col-2 py-1">
                            <label for="altPhone" class="form-label fs-7">Alt Phone</label>
                            <input type="number" class="form-control rounded-1" name="altPhone" id="altPhone">
                        </div>
                        <div class="col-3 py-1">
                            <label for="businessType" class="form-label fs-7">Business Type*</label>
                            <select class="form-select fs-7" name="businessType" id="businessType" aria-label="businessType" required>
                                <option value=""></option>
                                <option value="Individual">Individual</option>
                                <option value="Company">Company</option>
                            </select>
                            <div class="invalid-feedback fs-7">
                                    This field cannot be left blank
                            </div>
                        </div>
                        <div class="col-3 py-1">
                            <label for="territory" class="form-label fs-7">Tax Territory*</label>
                            <select class="form-select form-select-search fs-7" name="territory" id="territory" aria-label="territory" required>
                                <option value=""></option>
                                <option value="Unknown">Unknown</option>
                                <% countries.forEach(element => { %>
                                    <option value="<%= element.name %>"><%= element.name %></option>
                                <% }) %>
                            </select>
                            <div class="invalid-feedback fs-7">
                                This field cannot be left blank
                            </div>
                        </div>
                    </div>
                    <div class="row mt-2">
                        <h4 class="fw-light">Billing Details</h4>
                        <div class="col-6 py-1">
                            <label for="currency" class="form-label fs-7">Currency*</label>
                            <select class="form-select form-select-search fs-7" name="currency" id="currency" aria-label="currency" required>
                                <option value=""></option>
                                <% currencies.forEach(e => { %>
                                    <option value="<%= e.cc %>"><%= e.cc %> (<%= e.name %>)</option>
                                <% }) %>
                            </select>
                            <div class="invalid-feedback fs-7">
                                    This field cannot be left blank
                            </div>
                        </div>
                        <div class="col-3 py-1">
                            <label for="billingAccount" class="form-label fs-7">Default Billing Account*</label>
                            <select class="form-select form-select-search fs-7" name="billingAccount" id="billingAccount" aria-label="billingAccount" required>
                                <option value=""></option>
                                <% accounts.forEach(e => { %>
                                    <option value="<%= e.number %>"><%= e.number %> (<%= e.name %>)</option>
                                <% }) %>
                            </select>
                            <div class="invalid-feedback fs-7">
                                    This field cannot be left blank
                            </div>
                        </div>
                        <div class="col-3 py-1">
                            <label for="externalId" class="form-label fs-7">External ID</label>
                            <small class="text-secondary">(i.e., DPID, ISNI, etc.)</small>
                            <input type="text" class="form-control rounded-1" name="externalId" id="externalId">
                        </div>
                    </div>
                    <div class="row mt-2">
                        <div class="col-6 py-1">
                            <label for="line1" class="form-label fs-7">Address</label>
                            <input type="text" class="form-control rounded-1" name="line1" id="line1">
                        </div>
                        <div class="col-6 py-1">
                            <label for="line2" class="form-label fs-7">Address 2</label>
                            <input type="text" class="form-control rounded-1" name="line2" id="line2">
                        </div>
                    </div>
                    <div class="row mt-2 mb-4">
                        <div class="col-3 py-1">
                            <label for="city" class="form-label fs-7">City</label>
                            <input type="text" class="form-control rounded-1" name="city"  id="city" placeholder="">
                        </div>
                        <div class="col-3 py-1">
                            <label for="state" class="form-label fs-7">State</label>
                            <input type="text" class="form-control rounded-1" name="state"  id="state" placeholder="">
                        </div>
                        <div class="col-2 py-1">
                            <label for="zip" class="form-label fs-7">Postal Code</label>
                            <input type="text" class="form-control rounded-1" name="zip"  id="zip" placeholder="">
                        </div>
                        <div class="col-4 py-1">
                            <label for="country" class="form-label fs-7">Country</label>
                            <select class="form-select form-select-search fs-7" name="country" id="country" aria-label="Country">
                                <option value=""></option>
                                <% countries.forEach(element => { %>
                                    <option value="<%= element.name %>"><%= element.name %></option>
                                <% }) %>
                            </select>
                        </div>
                    </div>
                    <button type="button" class="btn btn-secondary rounded-1 py-1" onclick="location.href='<%= urlreturn %>'">Cancel</button>
                    <button type="submit" class="btn btn-primary rounded-1 py-1">Save Party</button>
                    <p class="fs-7 text-secondary mt-2">* Required Field</p>
                </form>
            </div>
        </div>
    </div>
</div>
<%- include('../../partials/footer') %>