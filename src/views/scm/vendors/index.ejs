<%- include('../../partials/header') %>
<div class="flex-grow-1 bg-body-tertiary">
    <%- include('../../partials/breadcrumb') %>
    <div class="px-3">
        <div class="container py-3">
            <div class="border mb-3 shadow-sm">
                <div class="bg-body border-bottom px-3 py-2">
                    <h4 class="fw-normal mb-0">Vendors</h4>
                </div>
                <div class="py-3 bg-body">
                    <p class="fs-7 px-3 mb-2 text-secondary">Search Options</p>
                    <div class="d-flex justify-content-between px-3">
                        <div class="d-flex justify-content-between gap-3">
                            <div class="d-flex align-items-center gap-2">
                                <span class="text-secondary fs-7">Show</span>
                                <select class="form-select fs-7" aria-label="Default select example">
                                    <option value="10">10</option>
                                    <option value="25">25</option>
                                    <option value="50">50</option>
                                    <option value="100" selected>100</option>
                                </select>
                                <span class="text-secondary fs-7">Records</span>
                            </div>
                            <div>
                                <ul class="list-group">
                                    <li class="input-group-text bg-body text-secondary fs-7">
                                        <% // let startRecord = (Number(current) - 1) * perPage + 1; %>
                                        <% // let endRecord = Math.min(startRecord + perPage - 1, count); %>
                                        <%= // `${startRecord}-${endRecord}` %>
                                        <%= // `of ${count} Records` %>
                                        0-0 of 0 Records
                                    </li>
                                </ul>
                            </div>
                        </div>
                    </div>
                    <p class="fs-7 px-3 mt-2 pt-2 mb-2 text-secondary border-top">Search Results</p>
                    <div class="px-3">
                        <table class="fs-7 table table-striped table-hover">
                            <thead>
                                <tr>
                                    <th>
                                        Vendor ID
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-funnel ms-1" viewBox="0 0 16 16">
                                            <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2z"/>
                                        </svg>
                                    </th>
                                    <th>
                                        Name
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-funnel ms-1" viewBox="0 0 16 16">
                                            <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2z"/>
                                        </svg>
                                    </th>
                                    <th>
                                        Status
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-funnel ms-1" viewBox="0 0 16 16">
                                            <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2z"/>
                                        </svg>
                                    </th>
                                    <th>
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (vendors) { %>
                                    <% vendors.forEach(e => { %>
                                        <tr>
                                            <td><%= e.id %></td>
                                            <td><%= e.legalname %></td>
                                            <td></td>
                                            <td><a href="/scm/vendors/<%= e.id %>">Manage</a></td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td>No vendors found...</td>
                                        <td>...</td>
                                        <td>...</td>
                                        <td>...</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../../partials/footer') %>