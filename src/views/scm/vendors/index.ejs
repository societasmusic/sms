<%- include('../../partials/header') %>
<div class="flex-grow-1 bg-body-tertiary">
    <%- include('../../partials/breadcrumb') %>
    <div class="px-3">
        <div class="container py-3">
            <div class="border mb-3 shadow-sm">
                <div class="bg-body border-bottom px-3 py-2 d-flex justify-content-between">
                    <h4 class="fw-normal mb-0">Vendors</h4>
                    <button type="button" class="btn btn-primary fs-7 py-1 px-2 d-flex" data-bs-toggle="tooltip" data-bs-title="Create vendor" onclick="location.href='/scm/vendors/create'">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-plus-lg d-flex align-self-center me-1" viewBox="0 0 16 16">
                            <path fill-rule="evenodd" d="M8 2a.5.5 0 0 1 .5.5v5h5a.5.5 0 0 1 0 1h-5v5a.5.5 0 0 1-1 0v-5h-5a.5.5 0 0 1 0-1h5v-5A.5.5 0 0 1 8 2"/>
                        </svg>
                        Add
                    </button>
                </div>
                <div class="py-3 bg-body">
                    <p class="fs-7 px-3 mb-2 text-secondary">Search Options</p>
                    <div class="d-flex justify-content-between px-3">
                        <div class="d-flex justify-content-between gap-3">
                            <div class="d-flex align-items-center gap-2">
                                <span class="text-secondary fs-7">Show</span>
                                <select class="form-select fs-7" aria-label="Default select example">
                                    <option value="10">10</option>
                                    <option value="25">25</option>
                                    <option value="50">50</option>
                                    <option value="100" selected>100</option>
                                </select>
                                <span class="text-secondary fs-7">Records</span>
                            </div>
                            <div>
                                <ul class="list-group">
                                    <li class="input-group-text bg-body text-secondary fs-7">
                                        <% let startRecord = (Number(current) - 1) * perPage + 1; %>
                                        <% let endRecord = Math.min(startRecord + perPage - 1, count); %>
                                        <%= `${startRecord}-${endRecord}` %>
                                        <%= `of ${count} Records` %>
                                    </li>
                                </ul>
                            </div>
                        </div>
                        <nav aria-label="Page navigation">
                            <ul class="pagination mb-0">
                                <% if (current == 1) { %>
                                    <li class="page-item disabled"><a class="page-link fs-7" href="">&laquo;</a></li>
                                <% } else { %>
                                    <li class="page-item"><a class="page-link fs-7" href="?p=1">&laquo;</a></li>
                                <% } %>
                                <% if (current == 1) { %>
                                    <li class="page-item disabled"><a class="page-link fs-7" href="">&lsaquo;</a></li>
                                <% } else { %>
                                    <li class="page-item"><a class="page-link fs-7" href="?p=<%= current - 1 %>">&lsaquo;</a></li>
                                <% } %>
                                <% var i = (Number(current) > 5 ? Number(current) - 4 : 1) %>
                                <% if (i !== 1) { %>
                                    <li class="page-item disabled"><a class="page-link fs-7" href="">...</a></li>
                                <% } %>
                                <% for(; i <= (Number(current) + 4) && i <= pages; i++) { %>
                                    <% if (i == current) { %>
                                        <li class="page-item disabled"><a class="page-link fs-7" href=""><%= i %></a></li>
                                    <% } else { %>
                                        <li class="page-item"><a class="page-link fs-7" href="?p=<%= i %>"><%= i %></a></li>
                                    <% } %>
                                    <% if (i == Number(current) + 4 && i < pages) { %>
                                        <li class="page-item disabled"><a class="page-link fs-7" href="">...</a></li>
                                    <% } %>
                                <% } %>
                                <% if (current == pages) { %>
                                    <li class="page-item disabled"><a class="page-link fs-7" href="">&rsaquo;</a></li>
                                <% } else { %>
                                    <li class="page-item"><a class="page-link fs-7" href="?p=<%= Number(current) + 1 %>">&rsaquo;</a></li>
                                <% } %>
                                <% if (current == pages) { %>
                                    <li class="page-item disabled"><a class="page-link fs-7" href="">&raquo;</a></li>
                                <% } else { %>
                                    <li class="page-item"><a class="page-link fs-7" href="?p=<%= pages %>">&raquo;</a></li>
                                <% } %>
                            </ul>
                        </nav>
                    </div>
                    <p class="fs-7 px-3 mt-2 pt-2 mb-2 text-secondary border-top">Search Results</p>
                    <div class="px-3">
                        <table class="fs-7 table table-striped">
                            <thead>
                                <tr>
                                    <th class="col-6">
                                        Name
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-funnel ms-1" viewBox="0 0 16 16">
                                            <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2z"/>
                                        </svg>
                                    </th>
                                    <th class="col-2">
                                        Business Type
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-funnel ms-1" viewBox="0 0 16 16">
                                            <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2z"/>
                                        </svg>
                                    </th>
                                    <th class="col-2">
                                        Tax Territory
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-funnel ms-1" viewBox="0 0 16 16">
                                            <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2z"/>
                                        </svg>
                                    </th>
                                    <th class="col-1">
                                        Status
                                        <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="currentColor" class="bi bi-funnel ms-1" viewBox="0 0 16 16">
                                            <path d="M1.5 1.5A.5.5 0 0 1 2 1h12a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.128.334L10 8.692V13.5a.5.5 0 0 1-.342.474l-3 1A.5.5 0 0 1 6 14.5V8.692L1.628 3.834A.5.5 0 0 1 1.5 3.5zm1 .5v1.308l4.372 4.858A.5.5 0 0 1 7 8.5v5.306l2-.666V8.5a.5.5 0 0 1 .128-.334L13.5 3.308V2z"/>
                                        </svg>
                                    </th>
                                    <th class="col-1">
                                        Actions
                                    </th>
                                </tr>
                            </thead>
                            <tbody>
                                <% if (vendors) { %>
                                    <% vendors.forEach(e => { %>
                                        <tr>
                                            <td><%= e.legalName %></td>
                                            <td><%= e.businessType %></td>
                                            <td><%= e.taxTerritory %></td>
                                            <td>
                                                <% if (e.status == "Enabled") { %>
                                                    <span class="badge text-bg-success"><%= e.status %></span>
                                                <% } else { %>
                                                    <span class="badge text-bg-warning"><%= e.status %></span>
                                               <% } %>
                                            </td>
                                            <td><a href="/scm/vendors/<%= e._id %>">Manage</a></td>
                                        </tr>
                                    <% }) %>
                                <% } else { %>
                                    <tr>
                                        <td>...</td>
                                        <td>No vendors found...</td>
                                        <td>...</td>
                                        <td>...</td>
                                        <td>...</td>
                                    </tr>
                                <% } %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<%- include('../../partials/footer') %>